<div class='container'>
  <div class='row'>
    <div class='col l6 offset-l3 m8 offset-m2 s12'>
      <div class='card'>
        <div class='card-content' style='margin-top: 2rem'>
          <div class='card-title center-align'>My Profile</div>
          <div class='row' style='margin-top: 2rem'>
            <div class='col s12 m6 l6'>
              Name: &ensp; <%= current_user.name %>
            </div>
            <div class='col s12 m6 l6'>
              Username: &ensp; <%= current_user.username %>
            </div>
            <div class='col s12 m6 l6'>
              Created: &ensp; <%= time_ago_in_words current_user.created_at %> ago
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>